<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forget_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="pumin.com.pumin.activity.ForgetPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y40"
        android:background="@color/red"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Register_left_IMG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/x10"
            android:src="@mipmap/yolo_back_left" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="@dimen/x28"
            android:text="修改密码"
            android:textSize="20sp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Forget_linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:layout_marginBottom="@dimen/x1"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingRight="@dimen/x20">

        <ImageView
            android:id="@+id/Forget_imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x21"
            android:layout_marginRight="@dimen/x3"
            android:src="@mipmap/yl_accountimage" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:gravity="center"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/Forget_etName"
                style="@style/EditTextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x5"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:hint="请输入旧密码"
                android:textColor="@color/black"
                android:textColorHint="@color/text_gray_light" />

            <!--<Button-->
            <!--android:id="@+id/Forget_btnGetCode"-->
            <!--style="@style/ButtonStyle"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="30dp"-->
            <!--android:layout_marginLeft="0dp"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:layout_marginTop="0dp"-->
            <!--android:paddingBottom="5dp"-->
            <!--android:paddingLeft="10dp"-->
            <!--android:paddingRight="10dp"-->
            <!--android:paddingTop="5dp"-->
            <!--android:text="@string/getcode"-->
            <!--android:textColor="@android:color/black"-->
            <!--android:textSize="12sp" />-->
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_gravity="center"
            android:background="@color/background_light_gray" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/Forget_linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingRight="@dimen/x20">

        <ImageView
            android:id="@+id/Forget_imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x21"
            android:layout_marginRight="@dimen/x3"
            android:src="@mipmap/icon_newpassword" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/Forget_etCode"
                style="@style/EditTextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x5"
                android:layout_weight="1"
                android:ems="10"
                android:hint="请输入新密码（大小写字母+数字）"
                android:textColor="@color/black"
                android:textColorHint="@color/text_gray_light" />
            <!--<CheckBox-->
            <!--android:id="@+id/Forget_cbLaws1"-->
            <!--android:layout_width="@dimen/x20"-->
            <!--android:layout_height="@dimen/y15"-->
            <!--android:layout_margin="@dimen/x8"-->
            <!--android:background="@drawable/checkbox_laws_selector"-->
            <!--android:button="@null" />-->
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_gravity="center"
            android:background="@color/background_light_gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Forget_linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingRight="@dimen/x20">

        <ImageView
            android:id="@+id/Forget_imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x21"
            android:layout_marginRight="@dimen/x3"
            android:src="@mipmap/icon_newpassword" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/Forget_etPsw"
                style="@style/EditTextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x5"
                android:layout_weight="1"
                android:background="@null"
                android:ems="6"
                android:hint="请再次输入新密码"
                android:textColor="@color/black"
                android:textColorHint="@color/text_gray_light" />

            <!--<CheckBox-->
            <!--android:id="@+id/Forget_cbLaws2"-->
            <!--android:layout_width="@dimen/x20"-->
            <!--android:layout_height="@dimen/y15"-->
            <!--android:layout_margin="@dimen/x8"-->
            <!--android:background="@drawable/checkbox_laws_selector"-->
            <!--android:button="@null" />-->
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_gravity="center"
            android:background="@color/background_light_gray" />
    </LinearLayout>
    <Button
        android:id="@+id/Forget_btnRrgister"
        style="@style/ButtonYT"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:layout_marginTop="@dimen/y20"
        android:text="确定" />
</LinearLayout>
