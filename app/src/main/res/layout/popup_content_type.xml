<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/Type_List"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/y180"
            android:layout_below="@+id/up_arrow"
            android:background="@drawable/img_bg_shape_red2">

        </ListView>
        <ImageView
            android:id="@+id/up_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_redjiantou" />
        <ImageView
            android:id="@+id/down_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Type_List"
            android:background="@drawable/down_arrow_drawable" />
    </RelativeLayout>
</LinearLayout>