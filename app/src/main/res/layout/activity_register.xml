<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="pumin.com.pumin.activity.RegisterActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/Register_left_IMG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_close"
        android:padding="@dimen/x20"
        android:layout_gravity="right"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        style="@style/Activity_Title"
        android:paddingTop="@dimen/y20"
        android:paddingBottom="@dimen/y20"
        />
</LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y40"
        android:background="@color/white"
        android:gravity="center"
        android:paddingRight="@dimen/x20"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x21"
            android:layout_marginRight="@dimen/x3"
            android:src="@mipmap/yl_phonenumberimage" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y40"
            android:orientation="horizontal"
            android:gravity="center"
            >


            <EditText
                android:id="@+id/etName"
                style="@style/EditTextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x5"
                android:layout_weight="1"
                android:hint="@string/name_hint"
                android:inputType="phone"
                android:textColor="@color/black"
                android:maxLength="11"
                android:textColorHint="@color/text_gray_light"
                android:phoneNumber="true"/>


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/y20"
        android:paddingRight="@dimen/y20">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_gravity="center"
            android:background="@color/background_light_gray" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y40"
        android:gravity="center"
        android:paddingRight="@dimen/x20"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x21"
            android:layout_marginRight="@dimen/x3"
            android:src="@mipmap/yl_verificationcode" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y40"
            android:orientation="horizontal"
            android:gravity="center">

            <EditText
                android:id="@+id/etCode"
                style="@style/EditTextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x5"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/code_hint"
                android:inputType="number"
                android:textColor="@color/black"
                android:textColorHint="@color/text_gray_light"
                  />
            <Button
                android:id="@+id/btnGetCode"
                style="@style/ButtonYT"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y30"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginTop="0dp"
                android:text="@string/getcode"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/y20"
        android:paddingRight="@dimen/y20">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_gravity="center"
            android:background="@color/background_light_gray" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y40"
        android:gravity="center"
        android:paddingRight="@dimen/x20"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x21"
            android:layout_marginRight="@dimen/x3"
            android:src="@mipmap/yl_accountimage" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y40"
            android:orientation="horizontal"
            android:gravity="center">

            <EditText
                android:id="@+id/etPsw"
                style="@style/EditTextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x5"
                android:layout_weight="1"
                android:background="@null"
                android:ems="6"
                android:hint="密码（大小写字母+数字）"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/text_gray_light"
                 />

            <CheckBox
                android:id="@+id/cbLaws"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/y15"
                android:layout_margin="@dimen/x8"
                android:background="@drawable/checkbox_laws_selector"
                android:button="@null" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/y20"
        android:paddingRight="@dimen/y20">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_gravity="center"
            android:background="@color/background_light_gray" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right|center_vertical"
        android:paddingTop="@dimen/x5"
        android:paddingBottom="@dimen/x5"
        >
        <TextView
            android:id="@+id/LoginTX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有账号？前往"
            android:textSize="14sp"
            android:textColor="#3c4450"
            android:gravity="right"
            />
        <TextView
            android:id="@+id/Login2TX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textSize="14sp"
            android:textColor="#a7292a"
            android:gravity="right"
            android:paddingRight="@dimen/x20"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnRrgister"
        style="@style/ButtonYT"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:layout_marginTop="@dimen/y20"
        android:text="@string/btn_register" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="注册即表示同意永乐电器服务条款及隐私条款"
        android:textSize="14sp"
        android:textColor="#3c4450"
        android:gravity="bottom|center"

        android:paddingBottom="@dimen/y20"/>
</LinearLayout>
