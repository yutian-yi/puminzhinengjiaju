<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forget_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="pumin.com.pumin.activity.SetPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Register_left_IMG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="@dimen/x20"
            android:src="@mipmap/icon_close" />

        <TextView
            style="@style/Activity_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/y20"
            android:paddingTop="@dimen/y20"
            android:text="找回密码" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Forget_linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:layout_marginBottom="@dimen/x1"
        android:layout_marginTop="@dimen/y10"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingRight="@dimen/x20">

        <ImageView
            android:id="@+id/Forget_imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x3"
            android:src="@mipmap/yl_phonenumberimage" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:gravity="center"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/Forget_etName"
                style="@style/EditTextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="@string/name_hint"
                android:phoneNumber="true"
                android:maxLength="11"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/x5"
                android:textColorHint="@color/text_gray_light"
                />


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/y20"
        android:paddingRight="@dimen/y20">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_gravity="center"
            android:background="@color/background_light_gray" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/Forget_linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingRight="@dimen/x20">

        <ImageView
            android:id="@+id/Forget_imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x3"
            android:src="@mipmap/yl_verificationcode" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/Forget_etCode"
                style="@style/EditTextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/code_hint"
                android:inputType="number"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/x5"
                android:textColorHint="@color/text_gray_light"
               />

            <Button
                android:id="@+id/Forget_btnGetCode"
                style="@style/ButtonYT"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x30"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginTop="0dp"
                android:paddingBottom="@dimen/x5"
                android:paddingLeft="@dimen/x10"
                android:paddingRight="@dimen/x10"
                android:paddingTop="@dimen/x5"
                android:text="@string/getcode"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/y20"
        android:paddingRight="@dimen/y20">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_gravity="center"
            android:background="@color/background_light_gray" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/Forget_linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingRight="20dp">

        <ImageView
            android:id="@+id/Forget_imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x3"
            android:src="@mipmap/yl_accountimage" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/Forget_etPsw"
                style="@style/EditTextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:ems="6"
                android:hint="密码（大小写字母+数字）"
                android:layout_marginLeft="@dimen/x5"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/text_gray_light"
                />

            <CheckBox
                android:id="@+id/Forget_cbLaws"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/y15"
                android:layout_margin="@dimen/x8"
                android:background="@drawable/checkbox_laws_selector"
                android:button="@null" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/y20"
        android:paddingRight="@dimen/y20">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_gravity="center"
            android:background="@color/background_light_gray" />
    </LinearLayout>
    <Button
        android:id="@+id/Forget_btnRrgister"
        style="@style/ButtonYT"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:layout_marginTop="@dimen/x20"
        android:text="确认" />
</LinearLayout>
